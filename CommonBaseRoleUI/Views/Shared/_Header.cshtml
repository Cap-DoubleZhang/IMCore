
@using Model.EntityModel.BaseRole 
@model SystemUser
<header class="main-header">
    <!-- Logo -->
    <a href="/Home/Index" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>A</b>LT</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Admin</b>LTE</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- Messages: style can be found in dropdown.less-->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/AdminLTEScript/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                        <span class="hidden-xs">User Name @*@Model.UserInfo.UserShowName*@</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="~/AdminLTEScript/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                            <p>
                                @*@Model.UserInfo.UserShowName*@User Name
                                <small>
                                    (@*@foreach (var item in Model.Roles)
                                    {
                                        if (item.RoleID == Model.Roles.LastOrDefault().RoleID)
                                        {
                                            @item.RoleName
                                        }
                                        else
                                        {
                                            @(item.RoleName + "，")
                                        }
                                    }*@超级管理员)
                                </small>
                            </p>
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="#" class="btn btn-default btn-flat" onclick="addTabs({id:'1',title: '更改密码',close: true,url: '/User/UserUpdatePasswordPage',urlType: 'relative'});">修改密码</a>
                            </div>
                            <div class="pull-right">
                                <a href="/Home/Logout" class="btn btn-default btn-flat">退出系统</a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>
